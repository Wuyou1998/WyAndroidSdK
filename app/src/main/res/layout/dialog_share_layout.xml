<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    >

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:id="@+id/weixin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"
                >

                <ImageView
                    android:id="@+id/image_weixin_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/comui_share_weixin"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_weixin_view"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="微信"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/moment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp"
                >

                <ImageView
                    android:id="@+id/image_weixin_moment_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/comui_share_weixin_pengyou"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/image_weixin_moment_view"
                    android:layout_centerHorizontal="true"
                    android:text="朋友圈"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/qq_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp"
                >

                <ImageView
                    android:id="@+id/image_qq_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/comui_share_qq"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_qq_view"
                    android:layout_centerHorizontal="true"
                    android:text="QQ"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    />
            </RelativeLayout>


            <RelativeLayout
            android:id="@+id/weibo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            >

            <ImageView
                android:id="@+id/image_weibo_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/timg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_weibo_view"
                android:layout_centerHorizontal="true"
                android:text="新浪微博"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_more_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp"
                >

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/fenxiang"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_more"
                    android:layout_centerHorizontal="true"
                    android:text="更多"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/scroll_view"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"
        />

    <TextView
        android:id="@+id/cancel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/ColorMain"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="取消"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        />
</RelativeLayout>